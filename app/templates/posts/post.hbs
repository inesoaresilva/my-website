{{page-title 'Post'}}
<article class="full-post">
  <div class="blogpost-header">
    <h1><span>{{@model.title}}</span></h1>
  </div>
  <p class="post-date"> post created in {{format-date @model.date}}</p>
  <div class="blogpost-body">
    {{markdown-to-html @model.content extensions="polaroid"}}
  </div>
  {{#if this.notFastboot}}
  <div class="sun-reaction">
    <Reaction @id={{@model.id}}></Reaction>
  </div>
  {{/if}}
  <UpButton/>
</article>
{{outlet}}