{{page-title 'Category'}}
<section class='posts'>
  <div class='action-message'>
    <h1><span>All {{@model.category}} Posts</span></h1>
    <img alt='' role='presentation' src='../../assets/images/down-arrow.svg' />
  </div>
  <ul class='posts-list'>
    {{#each @model.filteredPosts as |post|}}
      <PostPreview @post={{post}} />
    {{/each}}
  </ul>
</section>
{{outlet}}